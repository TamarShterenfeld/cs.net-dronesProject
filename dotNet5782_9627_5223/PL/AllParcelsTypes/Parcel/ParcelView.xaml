<Window x:Class="PL.ParcelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL" 
        mc:Ignorable="d"
        Title="MyParcelView" Height="650" Width="800"
        x:Name="MyParcelView"
        Icon ="../../images/toplogo.jpg">
    <Grid>
        <Grid Margin="0,12,669,555" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush Stretch="Fill" ImageSource="/images/logo1.jpg"/>
            </Grid.Background>
        </Grid>
        <Grid x:Name ="curdrone" Margin="-31,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="80*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="242*"/>
                <ColumnDefinition Width="92*"/>
                <ColumnDefinition Width="279*"/>
                <ColumnDefinition Width="218*"/>
            </Grid.ColumnDefinitions>

            <WrapPanel  Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="64,12,159,12" >
                <Button x:Name="button1"  Width="79" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Cancel" Command="{Binding Cancel}" CommandParameter="{Binding ElementName=MyParcelView}" Background="#FFD40202" BorderBrush="White"  Foreground="White" />
                <!--<Button x:Name="buttonState" Width="80" Background="Turquoise" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Add" Command="{Binding Add}" CommandParameter="{Binding ElementName=MyParcelView}" BorderBrush="White" />-->
                <Button x:Name="buttonDelete" Width="79" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Delete" Command="{Binding Delete}" CommandParameter="{Binding ElementName=MyParcelView}"  Background="#FFD40202" BorderBrush="White" />

            </WrapPanel>

            <TextBlock Text="Parcel Id:" Grid.Column="1" Grid.Row ="2" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Foreground="#FF4C386B" Height="16" Width="51"/>
            <TextBox x:Name="ParcelId"
                TextWrapping="Wrap"
                IsEnabled="False"
                Width="150"
                Grid.Column="2"
                Grid.Row ="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"             
                Text="{Binding Parcel.ParcelId}" Height="25" 
                     />

            <TextBlock Text="Sender Id:" Grid.Column="1" Grid.Row ="3" HorizontalAlignment="Left" Foreground="#FF4C386B" Width="53" VerticalAlignment="Bottom" Height="16" />
            <StackPanel  Grid.Column="2"
                Grid.Row ="3" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" Cursor="Hand"
                         Width=" 180">
                <StackPanel.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding LeftDoubleClick}" />
                </StackPanel.InputBindings>
                <TextBox x:Name="SenderId"
                TextWrapping="Wrap" 
                IsEnabled="False"
                Grid.Column="2"
                Grid.Row ="3" 
                HorizontalAlignment="Center"
                Text="{Binding Parcel.SenderId }"  Width="150" Height="23" Cursor="Hand" />
            </StackPanel>
            <TextBlock Text="Target Id:" Grid.Row="4" Grid.Column="1" Foreground="#FF4C386B" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Height="16" Width="48" />
            <StackPanel  Grid.Column="2"
                Grid.Row ="4" 
                HorizontalAlignment="Center" Cursor="Hand"
                VerticalAlignment="Bottom" Width="180" >
                <StackPanel.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding LeftDoubleClick}" />
                </StackPanel.InputBindings>
                <TextBox x:Name="TargetId"
                TextWrapping="Wrap" 
                IsEnabled="False"
                Grid.Column="2"
                Grid.Row ="4" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Text="{Binding Parcel.TargetId }"  Width="150" Height="25" />
            </StackPanel>

            <TextBlock Text="DroneId:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Foreground="#FF3F4245" Height="16" Width="49"/>
            <TextBox x:Name="DroneId"
                TextWrapping="Wrap" 
                IsEnabled="False"
                Grid.Column="2"
                Grid.Row ="5" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Text="{Binding Parcel.DroneId }"  Width="150" Height="25" />
            <TextBlock Text="Weight" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Foreground="#FF3F4245" Height="16" Width="49" />
            <TextBox x:Name ="weight" 
                Grid.Row="6" 
                TextWrapping="Wrap" 
                Grid.Column="2"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                IsEnabled="False"
                Width="150"
                Text="{Binding Parcel.Weight }" />
            <TextBlock Text="Priority:" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Foreground="#FF3F4245" Height="16" Width="49" />
            <TextBox x:Name ="priority"
                IsEnabled="False"
                Grid.Row="7" 
                Grid.Column="2"
                TextWrapping="Wrap"
                Width="150"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Text ="{Binding Parcel.Priority}" Height="25" />
            <TextBlock Text="Status:" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Foreground="#FF3F4245" Height="16" Width="49" />
            <TextBox x:Name ="status" 
                IsEnabled="False"
                Grid.Row="8" 
                Grid.Column="2"
                Width="150"
                HorizontalAlignment="Center"
                TextWrapping="Wrap" 
                VerticalAlignment="Bottom"
                Text ="{Binding Parcel.Status}" Height="25" />
        </Grid>

    </Grid>
</Window>
    
